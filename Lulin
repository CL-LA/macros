setglobal	charfileused	"Lulin"
setglobal   charfilerevision "20210528-0100-0003"
message "This file IS NOT reloaded when you reload macros"

include "Default"
include "layells.macro"
include "moonstone_functions.macro"

// VARIABLES
	setglobal AmCadding		1						// Disabled ExilePicker if on.
	setglobal auraHDevice 	"Asklepian" 			// Set this to "Asklepian" or "Asklepian Staff"
	setglobal chaintype     "chain"         		// Used by Quickchain.mac.
	setglobal gdefpie 		"Inu Teisei"  			// Used by Pie-O-Matic in funactions.mac
	setglobal gIdleTime 	100						// Set this to the desired pause time for idle macro 
													// (every 4 = 1 second approximately)
	setglobal gHealDev		"Caduceus" 				// set to Caduceus or Mercurial Staff or Asklepian Staff"
	setglobal healingDevice "Caduceus" 				// set to "Caduceus" or "Mercurial Staff"
	setglobal InfoExile 	0						// Turns off exile info by default in AFK macro called on
													// login, setf can change it.
	setglobal messageStatus 0						// Turning off debug if 0, on if 1
	setglobal myDefLeft		"Bunch of Mistletoe"	// Re-equip desired left item.
	setglobal myspeed		medium 					// sets speed of speed, zoom, fast, medium, slow
	setglobal MySunStone  	sunstone				// Set this to your sunstone, used in sunstone and tc_macro.
	setglobal myWeapon 		"dagger"  				// change this to your weapon of choice
	setglobal NumZuBags		0						// the number of kudzu bags you carry, 
													// used in scanner.
	setglobal OccupyRandom 	0						// 1 = Occupy is on. Any other value = Occupy is OFF
	setglobal scanBreak 	0 						// Enables scanner to run continuously.
	setglobal ThankRandom 	0						// turns off thank random routine at startup 
													// for use with idle routine
	setglobal ThankExile	1						// turns on thank specific set of random exiles
													// used in idle.macro
	setglobal thankreg 		" Insert random thank message here \r"
	setglobal thankfnf	 	" You're supposed to be a friend, but meh. \r"
	setglobal ty			"dwarf"					// used in Abbreviations to determine type of thank you
	setglobal woc			"Caduceus"  			// used by Quickchain.mac 
													// to re-equip default right hand item.
	
	
	*-*-*-* Key Variables - used in keys.macro
